{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "INITO WP Starter Theme",
	"description": "A modern WordPress starter theme with full block editor support",
	"settings": {
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px",
			"allowEditing": true,
			"allowCustomContentAndWideSize": true
		},
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"defaultDuotone": true,
			"defaultGradients": true,
			"defaultPalette": true,
			"duotone": [
				{
					"colors": ["#000000", "#ffffff"],
					"slug": "foreground-and-background",
					"name": "Foreground and background"
				},
				{
					"colors": ["#007cba", "#ffffff"],
					"slug": "primary-and-white",
					"name": "Primary and white"
				}
			],
			"gradients": [
				{
					"slug": "vivid-cyan-blue-to-vivid-purple",
					"gradient": "linear-gradient(135deg, #007cba 0%, #005a87 100%)",
					"name": "Primary gradient"
				},
				{
					"slug": "light-to-dark",
					"gradient": "linear-gradient(135deg, #f8f9fa 0%, #6c757d 100%)",
					"name": "Light to dark"
				}
			],
			"palette": [
				{
					"slug": "primary",
					"color": "#007cba",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#005a87",
					"name": "Secondary"
				},
				{
					"slug": "tertiary",
					"color": "#6c757d",
					"name": "Tertiary"
				},
				{
					"slug": "white",
					"color": "#ffffff",
					"name": "White"
				},
				{
					"slug": "black",
					"color": "#000000",
					"name": "Black"
				},
				{
					"slug": "light-gray",
					"color": "#f8f9fa",
					"name": "Light Gray"
				},
				{
					"slug": "dark-gray",
					"color": "#343a40",
					"name": "Dark Gray"
				},
				{
					"slug": "success",
					"color": "#28a745",
					"name": "Success"
				},
				{
					"slug": "warning",
					"color": "#ffc107",
					"name": "Warning"
				},
				{
					"slug": "danger",
					"color": "#dc3545",
					"name": "Danger"
				}
			]
		},
		"typography": {
			"customFontSize": true,
			"dropCap": true,
			"fontStyle": true,
			"fontWeight": true,
			"letterSpacing": true,
			"lineHeight": true,
			"textDecoration": true,
			"textTransform": true,
			"fontFamilies": [
				{
					"fontFamily": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif",
					"name": "System Font",
					"slug": "system-font"
				},
				{
					"fontFamily": "Georgia, 'Times New Roman', Times, serif",
					"name": "Serif",
					"slug": "serif"
				},
				{
					"fontFamily": "'Courier New', Courier, monospace",
					"name": "Monospace",
					"slug": "monospace"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": "14px",
					"name": "Small",
					"fluid": {
						"min": "12px",
						"max": "14px"
					}
				},
				{
					"slug": "medium",
					"size": "16px",
					"name": "Medium",
					"fluid": {
						"min": "14px",
						"max": "16px"
					}
				},
				{
					"slug": "large",
					"size": "20px",
					"name": "Large",
					"fluid": {
						"min": "18px",
						"max": "24px"
					}
				},
				{
					"slug": "x-large",
					"size": "28px",
					"name": "Extra Large",
					"fluid": {
						"min": "24px",
						"max": "32px"
					}
				},
				{
					"slug": "xx-large",
					"size": "36px",
					"name": "Extra Extra Large",
					"fluid": {
						"min": "30px",
						"max": "42px"
					}
				}
			]
		},
		"spacing": {
			"customSpacingSize": true,
			"spacingScale": {
				"operator": "*",
				"increment": 1.5,
				"steps": 7,
				"mediumStep": 1.5,
				"unit": "rem"
			},
			"spacingSizes": [
				{
					"size": "0.5rem",
					"slug": "30",
					"name": "1"
				},
				{
					"size": "1rem",
					"slug": "40",
					"name": "2"
				},
				{
					"size": "1.5rem",
					"slug": "50",
					"name": "3"
				},
				{
					"size": "2rem",
					"slug": "60",
					"name": "4"
				},
				{
					"size": "3rem",
					"slug": "70",
					"name": "5"
				},
				{
					"size": "4rem",
					"slug": "80",
					"name": "6"
				}
			],
			"units": ["px", "em", "rem", "vh", "vw", "%"]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"dimensions": {
			"aspectRatio": true,
			"minHeight": true
		},
		"position": {
			"sticky": true
		},
		"shadow": {
			"defaultPresets": true,
			"presets": [
				{
					"name": "Small shadow",
					"slug": "small",
					"shadow": "0 1px 3px rgba(0, 0, 0, 0.12), 0 1px 2px rgba(0, 0, 0, 0.24)"
				},
				{
					"name": "Medium shadow",
					"slug": "medium",
					"shadow": "0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23)"
				},
				{
					"name": "Large shadow",
					"slug": "large",
					"shadow": "0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23)"
				}
			]
		},
		"blocks": {
			"core/button": {
				"border": {
					"radius": true
				},
				"color": {
					"background": true,
					"text": true
				},
				"typography": {
					"fontWeight": true,
					"textTransform": true
				}
			},
			"core/heading": {
				"typography": {
					"fontWeight": true,
					"lineHeight": true,
					"textTransform": true
				}
			},
			"core/paragraph": {
				"typography": {
					"dropCap": true
				}
			},
			"core/image": {
				"border": {
					"radius": true
				},
				"spacing": {
					"margin": true,
					"padding": true
				}
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--black)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"padding": {
				"top": "0",
				"right": "var(--wp--preset--spacing--50)",
				"bottom": "0",
				"left": "var(--wp--preset--spacing--50)"
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--secondary)"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"fontWeight": "700",
					"lineHeight": "1.2"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--50)"
					}
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "600",
					"lineHeight": "1.3"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--40)"
					}
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "600",
					"lineHeight": "1.4"
				}
			},
			"button": {
				"border": {
					"radius": "8px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--white)"
				},
				"spacing": {
					"padding": {
						"top": "12px",
						"right": "24px",
						"bottom": "12px",
						"left": "24px"
					}
				},
				"typography": {
					"fontWeight": "600",
					"textTransform": "none"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)"
					}
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "700"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"fontWeight": "700",
					"lineHeight": "1.2"
				}
			},
			"core/quote": {
				"border": {
					"left": {
						"width": "4px",
						"style": "solid",
						"color": "var(--wp--preset--color--primary)"
					}
				},
				"spacing": {
					"padding": {
						"left": "var(--wp--preset--spacing--50)"
					}
				},
				"typography": {
					"fontStyle": "italic"
				}
			},
			"core/pullquote": {
				"border": {
					"top": {
						"width": "2px",
						"style": "solid",
						"color": "var(--wp--preset--color--primary)"
					},
					"bottom": {
						"width": "2px",
						"style": "solid",
						"color": "var(--wp--preset--color--primary)"
					}
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": ["page", "post"]
		},
		{
			"name": "page-no-title",
			"title": "Page without title",
			"postTypes": ["page"]
		}
	]
}
